---
import Layout from '@/layouts/Layout.astro';
import { EventService } from '@/lib/services/event';
import { EventSelection } from '@/components/events/EventSelection';

const { API_TOKEN, DB } = Astro.locals.runtime.env;

const eventService = new EventService(DB);
const events = await eventService.getActive();
---

<Layout title="">
  <EventSelection events={events} apiToken={API_TOKEN} client:only="react" />
</Layout>